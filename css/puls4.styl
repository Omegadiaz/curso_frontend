gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_texto = #7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


a
	color naranja
body
	background #e8e8e8
	color gris_oscuro
	font-family Arial
	transition font-size 1s
	font-size 16px


header
	background: gris_oscuro
	color white
	padding 0.5em
	position relative
	overflow hidden
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1



	.logo
		border-right 1px solid azul
		width: 60px
		float left

		img 
			width 52px

	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			text-decoration none
			font-weight bold
			font-style italic
			font-size 14px
			
		.publicar
			background naranja
			color white
			margin -3px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right
			
		
			&:before
				font-family "iconitos"
				content "\e600"
				display inline-block
				margin 0 3px 0 0
				
		.sizer
			text-decoration none		
			
		.titulo
			font-size: 18px
			font-weight: normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			z-index 2
			margin 0 1.1em 0 0
			position relative
			margin-
			img 
				width 50px
				border-radius 50%

		.flechita
			display block
			background naranja
			color white
			text-align right
			position absolute
			width 2em
			margin 0 0 0 30px
			padding-top 0.3em
			padding-left 0.3em
			top 15px
			width 30px
			text-decoration none
			
			&:after
				content "\e602"
				display inline-block
				margin 0 0 0 0 
				font-family "iconitos"
				text-shadow 1px 1px 0px black

nav
	position relative
	background azul
	border-left 15px solid white
	height 2.6em
	padding-left 0.5em
	
	&:before
		border-left solid 7px white
		border-bottom solid 20px transparent
		border-top solid 20px transparent
		content ""
		position absolute
		top 0
		left 0
		
	
	.menu
		margin 0
		overflow-y hidden
		overflow-x auto
		height 3.0em
		line-height 40px
		white-space nowrap
		padding 0
		
		li
			
			display inline-block


			a
				color white
				text-decoration none
				padding-top 0.2em
				margin 0 0.5em
				display inline-block
				font-weight bold
				
form
	padding 0.8em
	display none
	label
		display inline-block
		width 60px;
		


.posts
	padding 0.5em
	
	
	.post
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.75)
		border-radius 0 0 0.5em 0.5em
		margin-bottom 1em
		
		.acciones
			
			padding 0.5em
			overflow hidden
			

			.datos
				
				float right
				
				.comentarios
					background gris_oscuro
					color white
					padding 2px 5px
					margin 0 1em 0 0
					text-decoration none
					boder-radius 3px
				
				.estrellita
					text-decoration none
					&:before
						opacity 0.5
						font-family "iconitos"
						content "\e601"
						font-size 1.5em
						vertical-align bottom
						
				
			.votos
				float left
				
				.down 
				.up
					text-decoration none
								
				.down
					color red
					&:before
						font-family "iconitos"
						content "\e602"
						font-size 1.5em
						vertical-align bottom
					
				.up 
					color green
					&:before
						font-family "iconitos"
						content "\e603"
						font-size 1.5em
						vertical-align bottom
					
		.descripcion
			color gris_texto
			border-bottom 3px solid azul
			overflow hidden
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					
				.fecha
					float right
					margin 0 1em 0 0 
				.tag
					background azul
					color white
					text-decoration none
					padding 0.2em 0.5em
					border-radius 0.5em
					
					
					
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0 
				
			
			.imagen
				float left
				
				img 
					height 160px
					vertical-align top
					width 120px
					
footer
	background naranja
	color rgba(white, 0.5)
	text-align center
	position relative
	width 100%
	overflow hidden
	bottom 0
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
		
		.mejor
			&:before
			&:after
				content "-"
				
@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 3em
				position relative
				&:before
					position absolute
					left 0px
					top -10px
					font-size 2.5em
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%
				